/* pages/playpage/playpage.wxss */
#bg{
  position:fixed;
  width:100%;
  height:100%;
  background:black;
}
.bg{
  position:fixed;
  width:170%;
  height:100%;
  opacity:0.2;
}
.name{
text-align:center;
font-size:50rpx;
color:#31C27C;
position:relative;
width:100%;
height:100rpx;
line-height:85rpx;
white-space: nowrap;
overflow: hidden;
text-overflow: ellipsis;
box-shadow: 0rpx 10rpx 20rpx #31C27C;
}
.name .authorName
{
  text-align:center;
font-size:20rpx;
color:#31C27C;
position:relative;
width:100%;
height:0rpx;
line-height:10rpx;

}
.main{
  width:100%;
  height:850rpx;
  /* background:pink; */
  position:relative;
}
.imgitem image{
width:450rpx;
height:450rpx;
border-radius:50%;
border-style: groove;
position:absolute;
top:0;
left:0;
bottom:0;
right:0;
margin:auto;
animation:playimg 10s linear infinite;
box-shadow: 3rpx 5rpx 20rpx #31C27C;
}

@keyframes playimg{
  0%{
  transform:rotate(Odeg);
  }
  100%{
  transform:rotate(360deg);
  }
}
.btnBox{
  width:100%;
  height:90rpx;
  background: #31C27C;
  display: flex;
  position: fixed;
  bottom:0;
  padding: 40rpx 12rpx;
  box-shadow: 3rpx 5rpx 20rpx #31C27C;
}
.btnBox #change{
  width: 50rpx;
  height: 50rpx;
  padding: 20rpx 0 0 0;
  margin:0 30rpx;
}
.btnBox #play{
  width: 90rpx;
  height: 90rpx;
  margin:0 50rpx;
}
.btnBox #interactive{
  width: 60rpx;
  height: 60rpx;
  margin:0 50rpx;
  padding: 12rpx 0 0 0;
}

.imgitem .clear
{
animation-play-state: paused;
}

.timeBox
{
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom:185rpx;
  padding:0 0rpx;
}
.timeBox view,.timeBox slider{
  float:left;
  height: 100rpx;
  line-height: 100rpx;
}
.timeBox view{
  width: 20%;
  text-align: center;
  color: white;
}
.timeBox slider{
  width: 60%;
  margin: 0;
  margin-top: 35rpx;
}