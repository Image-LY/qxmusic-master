/* pages/me/me.wxss */
.bg{
  width: 100%;
  background-color:rgb(235, 235, 235) ;
  padding-bottom: 30rpx;
}
.title{
	width: 200rpx;
	height: 100%;
	text-align: center;
	line-height: 80rpx;
	position: relative;
}
.top_block{
  width: 95%;
  height: 230rpx;
  border-radius: 30rpx;
  margin-left: 20rpx;
  background-color: rgb(254, 254, 254);
}
.top_block view{
  float: left;
}
.top_block .login{
  width:100%;
  height: 160rpx;
  display:flex;
  justify-content:left;
}
.login .log_btn{
width: 40%;
height: 60rpx;
text-align: center;
margin-top: 50rpx;
margin-left: 40rpx;
border-radius: 100%;
}
.log_btn .btn{
  width: 100%;
  height: 60rpx;
  line-height: 33rpx;
  font-weight: 100;
  font-size: inherit;
  background-color: rgb(0,233,134);
  color: white;
}
.login .explain{
  width: 60%;
  height: 60rpx;
  text-align: center;
  margin-top: 55rpx;
  padding-top:10rpx;
  font-size:3.5mm;
  font-weight: 20;
}
.top_block .score
{
  width: 33%;
  height: 80rpx;
  text-align: center;
  line-height: 70rpx;
  font-size:3.5mm;
  font-weight: 20;
}
.top_block .vip{
  width: 33%;
  height: 80rpx;
  text-align: center;
  line-height: 70rpx;
  font-size:3.5mm;
  font-weight: 20;
}
.top_block .sign_in
{
  width: 33%;
  height: 80rpx;
  text-align: center;
  line-height: 70rpx;
  font-size:3.5mm;
  font-weight: 20;
}
.login .user{
  width: 20%;
  height: 60rpx;
  text-align: center;
  margin-top: 50rpx;
  margin-left: 40rpx;
  border-radius: 100%;
}
.user image{
width:80rpx;
height:80rpx;
border-radius:50%;
border-style: groove;
top:0;
left:0;
bottom:0;
right:0;
}
.login .nickname{
  width: 60%;
  height: 60rpx;
  text-align:left;
  margin-top: 55rpx;
  padding-top:10rpx;
  font-size:3.5mm;
  font-weight:900;
}
.bottom_block{
  width: 100%;
	height: 800rpx;
	background-color:rgb(235, 235, 235);
	margin-top: 10rpx;
	font-size: 32rpx;
}
.choice{
  background-color:rgb(235, 235, 235) ;
}
.choice-item {
	display: flex;
	width: 90%;
	height: 60rpx;
	padding: 20rpx 30rpx;
	justify-content: space-between;
  align-items: center;
  
}
.switch-item {
	width: 100%;
	height: 120rpx;
	line-height: 120rpx;
	border-bottom: 1rpx solid #f1f1f1;
	display: flex;
	justify-content: space-between;
	align-items: center;
	/* padding: 0rpx 30rpx; */
}

.close {
	width: 100%;
	height: 100rpx;
	text-align: center;
	line-height: 100rpx;
}


